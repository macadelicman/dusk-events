<%= sidebar do %>
  <%= sidebar_current_indicator %>

  <%= sidebar_header do %>
    <div class="flex items-center">
      <img src="/logo.svg" alt="Logo" class="h-8 w-8" />
      <h2 class="ml-3 text-lg font-semibold">My App</h2>
    </div>
  <% end %>

  <%= sidebar_body do %>
    <%= sidebar_section do %>
      <%= sidebar_heading do %>Navigation<% end %>

      <%= sidebar_item(current: current_page?(dashboard_path), href: dashboard_path) do %>
        <svg data-slot="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
          <path d="M11.47 3.84a.75.75 0 011.06 0l8.69 8.69a.75.75 0 101.06-1.06l-8.689-8.69a2.25 2.25 0 00-3.182 0l-8.69 8.69a.75.75 0 001.061 1.06l8.69-8.69z" />
          <path d="M12 5.432l8.159 8.159c.03.03.06.058.091.086v6.198c0 1.035-.84 1.875-1.875 1.875H15a.75.75 0 01-.75-.75v-4.5a.75.75 0 00-.75-.75h-3a.75.75 0 00-.75.75V21a.75.75 0 01-.75.75H5.625a1.875 1.875 0 01-1.875-1.875v-6.198a2.29 2.29 0 00.091-.086L12 5.43z" />
        </svg>
        <%= sidebar_label do %>Dashboard<% end %>
      <% end %>

      <%= sidebar_item(current: current_page?(projects_path), href: projects_path) do %>
        <svg data-slot="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
          <path d="M19.5 21a3 3 0 003-3v-4.5a3 3 0 00-3-3h-15a3 3 0 00-3 3V18a3 3 0 003 3h15zM1.5 10.146V6a3 3 0 013-3h5.379a2.25 2.25 0 011.59.659l2.122 2.121c.14.141.331.22.53.22H19.5a3 3 0 013 3v1.146A4.483 4.483 0 0019.5 9h-15a4.483 4.483 0 00-3 1.146z" />
        </svg>
        <%= sidebar_label do %>Projects<% end %>
      <% end %>

      <%= sidebar_item(current: current_page?(settings_path), href: settings_path) do %>
        <svg data-slot="icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
          <path fill-rule="evenodd" d="M11.078 2.25c-.917 0-1.699.663-1.85 1.567L9.05 4.889c-.02.12-.115.26-.297.348a7.493 7.493 0 00-.986.57c-.166.115-.334.126-.45.083L6.3 5.508a1.875 1.875 0 00-2.282.819l-.922 1.597a1.875 1.875 0 00.432 2.385l.84.692c.095.078.17.229.154.43a7.598 7.598 0 000 1.139c.015.2-.059.352-.153.43l-.841.692a1.875 1.875 0 00-.432 2.385l.922 1.597a1.875 1.875 0 002.282.818l1.019-.382c.115-.043.283-.031.45.082.312.214.641.405.985.57.182.088.277.228.297.35l.178 1.071c.151.904.933 1.567 1.85 1.567h1.844c.916 0 1.699-.663 1.85-1.567l.178-1.072c.02-.12.114-.26.297-.349.344-.165.673-.356.985-.57.167-.114.335-.125.45-.082l1.02.382a1.875 1.875 0 002.28-.819l.923-1.597a1.875 1.875 0 00-.432-2.385l-.84-.692c-.095-.078-.17-.229-.154-.43a7.614 7.614 0 000-1.139c-.016-.2.059-.352.153-.43l.84-.692c.708-.582.891-1.59.433-2.385l-.922-1.597a1.875 1.875 0 00-2.282-.818l-1.02.382c-.114.043-.282.031-.449-.083a7.49 7.49 0 00-.985-.57c-.183-.087-.277-.227-.297-.348l-.179-1.072a1.875 1.875 0 00-1.85-1.567h-1.843zM12 15.75a3.75 3.75 0 100-7.5 3.75 3.75 0 000 7.5z" clip-rule="evenodd" />
        </svg>
        <%= sidebar_label do %>Settings<% end %>
      <% end %>
    <% end %>

    <%= sidebar_divider %>

    <%= sidebar_section do %>
      <%= sidebar_heading do %>Team<% end %>

      <%= sidebar_item(href: team_path) do %>
        <span data-slot="avatar" class="flex h-6 w-6 shrink-0 items-center justify-center rounded-lg border border-zinc-200 bg-white text-[0.625rem]/6 font-medium text-zinc-400 dark:border-zinc-700 dark:bg-zinc-800 dark:text-zinc-500">TM</span>
        <%= sidebar_label do %>Team Members<% end %>
      <% end %>
    <% end %>

    <%= sidebar_spacer %>
  <% end %>

  <%= sidebar_footer do %>
    <div class="flex items-center gap-3">
      <img src="/avatar.jpg" alt="User avatar" class="h-8 w-8 rounded-full" />
      <div>
        <p class="text-sm font-medium">John Doe</p>
        <p class="text-xs text-zinc-500">john@example.com</p>
      </div>
    </div>
  <% end %>
<% end %>
