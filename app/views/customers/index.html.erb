<p style="color: green"><%= notice %></p>

<% content_for :title, "Customers" %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Customers</h1>
    <%= link_to "New Customer", new_customer_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-gray-900 hover:bg-gray-700" %>
  </div>

  <div class="mt-8 overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Address</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Country</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Orders</th>
        <th class="relative px-6 py-3">
          <span class="sr-only">Actions</span>
        </th>
      </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
      <% @customers.each do |customer| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            <%= link_to customer.name, customer_path(customer), class: "hover:underline" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= customer.email %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= format_address(customer) %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= country_with_flag(customer) %></td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
            <%= customer_order_count(customer) %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
            <%= link_to "Edit", edit_customer_path(customer), class: "text-indigo-600 hover:text-indigo-900" %>
            <%= link_to "Delete", customer, method: :delete, data: { confirm: "Are you sure?" }, class: "ml-2 text-red-600 hover:text-red-900" %>
          </td>
        </tr>
      <% end %>
      <% if @customers.empty? %>
        <tr>
          <td colspan="6" class="px-6 py-8 text-center text-sm text-gray-500">
            No customers found.
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
